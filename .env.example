

# Port
PORT=3000



# Full database connection string

DATABASE_URL=postgres://postgres:postgres@db:5432/cubo

# Enable automatic schema sync (development only)
TYPEORM_SYNCHRONIZE=true



# Rate Limiting (per IP)
RATE_LIMIT_TTL=60

# Maximum number of requests allowed per IP per time window
RATE_LIMIT_POINTS=30


# Caching

CACHE_TTL_SECONDS=300


# Secret key used to sign JWT tokens
JWT_SECRET=change-me

# Token expiration time in seconds
JWT_EXPIRES_IN=3600

# Weather Providers


# Timeout for provider HTTP requests (milliseconds)
PROVIDER_TIMEOUT_MS=2500

# OpenWeather API key (required for fallback provider)
# Get one from: https://openweathermap.org/api
OPENWEATHER_API_KEY=put_your_key_here



# Enable fallback demo mode
# Allows forcing primary provider failure via Swagger
ENABLE_FALLBACK_DEMO=true
